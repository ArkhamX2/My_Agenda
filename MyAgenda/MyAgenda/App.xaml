<Application x:Class="MyAgenda.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MyAgenda"
             StartupUri="MainWindow.xaml"
             xmlns:viewModel="clr-namespace:MyAgenda.MVVM.ViewModel"
             xmlns:view="clr-namespace:MyAgenda.MVVM.View"
             >
    
    <Application.Resources>
        <ResourceDictionary>

            <DataTemplate DataType="{x:Type viewModel:HomeViewModel1}">
                <view:MainView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:DayViewModel}">
                <view:DayView/>
            </DataTemplate>

            <ResourceDictionary.MergedDictionaries>
            <ResourceDictionary Source="Theme/TimeDayTextBlockTheme.xaml"/>
            <ResourceDictionary Source="Theme/ModDayTextBoxTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
