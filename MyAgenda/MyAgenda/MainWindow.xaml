<Window x:Name="MainWind"
        x:Class="MyAgenda.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyAgenda"
        xmlns:viewModel="clr-namespace:MyAgenda.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="Расписание" Height="550" Width="700"
        MinHeight="400" MinWidth="380"
        ResizeMode="CanResizeWithGrip">
    
    <Window.DataContext >
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="34" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Rectangle Grid.Row="0">
            <Rectangle.Fill>
                <SolidColorBrush Color="AliceBlue" />
            </Rectangle.Fill>
        </Rectangle>

        <StackPanel  Orientation="Horizontal"
                     HorizontalAlignment="Right" Grid.Row="0">
            <TextBox Text="Время/дата" 
                     IsReadOnly="True" 
                     Focusable="False" 
                     VerticalAlignment="Center"
                     HorizontalAlignment="Left"
                     Width="150"
                     Margin="5,0,5,0"
                     FontSize="16"
                     >

            </TextBox>
            <TextBox x:Name="Enter"
                     Text="Войти как:" 
                     Style="{StaticResource MainWindowModeTextBoxTheme}"
                     Width="80"
                     Margin="5,0,5,0"
                     >

            </TextBox>
            <Button x:Name="Stud"
                    Content="Студент"
                    Style="{StaticResource MainWindowModeButtonTheme}"
                    Click="Stud_Click"
                    >
                
            </Button>
            <Button x:Name="Teach"
                    Content="Преподватель"
                    Style="{StaticResource MainWindowModeButtonTheme}"
                    Click="Teach_Click"
                    >

            </Button>
            <Button x:Name="Modif"
                    Content="Редактор"
                    Style="{StaticResource MainWindowModeButtonTheme}"
                    Click="Modif_Click"
                    >

            </Button>
            <TextBox x:Name="Mode"
                     Style="{StaticResource MainWindowModeTextBoxTheme}"
                     Width="0"
                     Margin="0,0,0,0"
                     >
                
            </TextBox>
            <Button Content="Меню" 
                    Margin="2,4,2,4"
                    Width="50"
                    Click="MenuButton_Click"
                    >
                
            </Button>
        </StackPanel>

        <ContentControl x:Name="Content"
                        Grid.Row="1"
                        Margin="10"                        
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="{Binding HomeCurrentView}"/>

    </Grid>
   
</Window>
